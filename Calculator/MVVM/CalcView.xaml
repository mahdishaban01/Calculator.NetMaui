<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MVVM.CalcView"
             Title="CalcView">

    <Grid RowDefinitions=".4*,.6*">
        <VerticalStackLayout>
            <Label Text="{Binding Formula}"
                   StyleClass="LabelText,LabelOperations"/>
            <Label Text="{Binding Result}" StyleClass="LabelText,LabelResult"/>
        </VerticalStackLayout>
        <Grid Grid.Row="1">
            <BoxView/>
            <Grid ColumnDefinitions="*,*,*,*"
                  ColumnSpacing="15"
                  RowDefinitions="*,*,*,*,*"
                  RowSpacing="15"
                  Padding="15">
                <!--#region Row 1-->
                
                <Button Text="AC" 
                        Style="{StaticResource YellowButton}"
                        Command="{Binding ResetCommand}"/>
                <Button Grid.Column="1" Text="âŒ«" 
                        Style="{StaticResource YellowButton}"
                        Command="{Binding BackspaceCommand}"/>
                <Button Grid.Column="2" Text="%" 
                        Command="{Binding OperationCommand}"
                        CommandParameter=" % "
                        Style="{StaticResource YellowButton}"/>
                <Button Grid.Column="3" Text="/" 
                        Command="{Binding OperationCommand}"
                        CommandParameter=" / "
                        Style="{StaticResource RedButton}"/>
                
                <!--#endregion-->
                
                <!--#region Row 2-->
                
                <Button Grid.Row="1" Text="7" 
                        Command="{Binding OperationCommand}"
                        CommandParameter="7"/>
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="8" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="8"/>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="9" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="9"/>
                <Button
                    Grid.Row="1"
                    Grid.Column="3"
                    Text="*" 
                    Command="{Binding OperationCommand}"
                        CommandParameter=" * "
                    Style="{StaticResource RedButton}"/>
                
                <!--#endregion-->
                
                <!--#region Row 3-->

                <Button Grid.Row="2" Text="4" 
                        Command="{Binding OperationCommand}"
                        CommandParameter="4"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="5" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="5"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="6" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="6"/>
                <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Text="-" 
                    Command="{Binding OperationCommand}"
                        CommandParameter=" - "
                    Style="{StaticResource RedButton}"/>
                
                <!--#endregion-->
                
                <!--#region Row 4-->

                <Button Grid.Row="3" Text="1" 
                        Command="{Binding OperationCommand}"
                        CommandParameter="1"/>
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Text="2" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="2"/>
                <Button
                    Grid.Row="3"
                    Grid.Column="2"
                    Text="3" 
                    Command="{Binding OperationCommand}"
                        CommandParameter="3"/>
                <Button
                    Grid.Row="3"
                    Grid.Column="3"
                    Text="+" 
                    Command="{Binding OperationCommand}"
                        CommandParameter=" + "
                    Style="{StaticResource RedButton}"/>
                
                <!--#endregion-->
                
                <!--#region Row 5-->
                
                <Button Grid.Row="4" Text="0" 
                        Grid.ColumnSpan="2"
                        Command="{Binding OperationCommand}"
                        CommandParameter="0"/>

                <Button
                    Grid.Row="4"
                    Grid.Column="2"
                    Text="." 
                    Command="{Binding OperationCommand}"
                        CommandParameter="."/>
                <Button
                    Grid.Row="4"
                    Grid.Column="3"
                    Text="=" 
                    Style="{StaticResource RedButton}"
                    Command="{Binding CalculateCommand}"/>
                
                <!--#endregion-->
            </Grid>
        </Grid>
    </Grid>
    
</ContentPage>